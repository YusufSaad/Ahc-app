<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="HomeWidgetView">
        <attr name="titleText" format="string" localization="suggested" />
        <attr name="subTitleText" format="string" localization="suggested" />
        <attr name="valueColor" format="color" />
        <attr name="numColumns" format="integer" />

        <attr name="recyclerViewManager">
            <flag name="vertical" value="1"/>
            <flag name="horizontal" value="2"/>
            <flag name="grid" value="3"/>
        </attr>
    </declare-styleable>

    <declare-styleable name="SearchAnimationToolbar">
        <attr name="title" format="string" />
        <attr name="titleTextColor" format="color" />
        <attr name="subtitle" format="string" />
        <attr name="subtitleTextColor" format="color" />
        <attr name="searchHint" format="string" />
        <attr name="searchBackgroundColor" format="color" />

    </declare-styleable>

</resources>