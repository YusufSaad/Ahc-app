<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="60dp"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:contentPaddingBottom="16dp">

        <org.abuhuraira.app.common.controls.homeWidget.HomeWidgetView
            android:id="@+id/prayerTimesWidgetView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:recyclerViewManager="vertical"
            app:titleText="@string/prayer_times_title"/>

    </android.support.v7.widget.CardView>



    <org.abuhuraira.app.common.controls.homeWidget.HomeWidgetView
        android:id="@+id/eventsWidgetView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:recyclerViewManager="horizontal"
        android:layout_marginTop="60dp"
        app:titleText="@string/events_title"/>
</LinearLayout>